# ===========================
# QUIROF√çSICOS ROCHA - ENVIRONMENT VARIABLES TEMPLATE
# ===========================
# Copy this file to .env and fill in your actual values
# DO NOT commit the actual .env file to version control!

# ===========================
# APPLICATION CONFIGURATION
# ===========================
NODE_ENV=development
PORT=3001
WEBSITE_URL=http://localhost:3001
DEBUG_MODE=true

# ===========================
# DATABASE CONFIGURATION
# ===========================
# Local MySQL Database (Development)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your-mysql-password
DB_NAME=appointments_db

# Production Database (Heroku JawsDB)
# JAWSDB_URL=mysql://username:password@hostname:port/database_name

# ===========================
# SECURITY & AUTHENTICATION
# ===========================
# JWT & Session Secrets (Generate strong random strings!)
SECRET_KEY=your-jwt-secret-key-here-generate-a-long-random-string
JWT_SECRET=your-jwt-secret-key-here-same-as-above
SESSION_SECRET=your-session-secret-key-here-generate-another-random-string
COOKIE_SECRET=your-cookie-secret-key-here-generate-another-random-string

# ===========================
# GOOGLE SERVICES
# ===========================
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Get this from Google Cloud Console - Maps JavaScript API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ===========================
# SMS SERVICE (VONAGE/NEXMO)
# ===========================
# Get these from Vonage Dashboard (dashboard.nexmo.com)
VONAGE_API_KEY=your-vonage-api-key
VONAGE_API_SECRET=your-vonage-api-secret
VONAGE_FROM_NUMBER=your-vonage-phone-number

# ===========================
# NOTIFICATION SETTINGS
# ===========================
# Admin phone number for SMS notifications (include country code)
ADMIN_PHONE_NUMBER=+526641234567

# ===========================
# EMAIL CONFIGURATION
# ===========================
# For Gmail, use app-specific password (not your regular password)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password

# ===========================
# RATE LIMITING & SECURITY
# ===========================
# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================
# PRODUCTION SETTINGS
# ===========================
# These will be set automatically by hosting providers like Heroku
# HEROKU_APP_NAME=your-app-name
# DATABASE_URL=provided-by-heroku
# JAWSDB_URL=provided-by-jawsdb-addon
