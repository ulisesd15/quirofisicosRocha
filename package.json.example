# Package.json scripts for development and production
{
  "name": "quirofisicos-rocha",
  "version": "1.0.0",
  "description": "Professional physiotherapy clinic management system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "prod": "NODE_ENV=production pm2 start ecosystem.config.js --env production",
    "stop": "pm2 stop quirofisicos-rocha",
    "restart": "pm2 restart quirofisicos-rocha",
    "logs": "pm2 logs quirofisicos-rocha",
    "monit": "pm2 monit",
    "setup-dev": "./setup-dev.sh",
    "deploy": "./deploy-production.sh",
    "db-backup": "mysqldump -u root -p appointments_db > backups/backup_$(date +%Y%m%d).sql",
    "db-restore": "mysql -u root -p appointments_db < backups/backup_latest.sql",
    "test": "echo \"Tests will be implemented\" && exit 0",
    "lint": "echo \"Linting will be implemented\" && exit 0",
    "security-audit": "npm audit"
  },
  "keywords": [
    "physiotherapy",
    "clinic",
    "appointments",
    "healthcare",
    "management"
  ],
