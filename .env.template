# Environment Variables Template
# Copy this file to .env and fill in your actual values

# =================================
# DATABASE CONFIGURATION
# =================================
DB_USER=root
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_NAME=appointments_db

# =================================
# APPLICATION SECRETS
# =================================
# Generate secure random strings for production!
SECRET_KEY=your-super-secure-secret-key-here
JWT_SECRET=your-jwt-secret-key-here

# =================================
# GOOGLE OAUTH (Optional)
# =================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# =================================
# GOOGLE MAPS API (Optional)
# =================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# =================================
# SERVER CONFIGURATION
# =================================
PORT=3001
NODE_ENV=development
DEBUG_MODE=true
WEBSITE_URL=http://localhost:3001

# =================================
# SMS SERVICE (VONAGE)
# =================================
# Sign up at: https://www.vonage.com/communications-apis/
VONAGE_API_KEY=your-vonage-api-key
VONAGE_API_SECRET=your-vonage-api-secret
VONAGE_FROM_NUMBER=your-vonage-phone-number

# =================================
# ADMIN CONFIGURATION
# =================================
ADMIN_PHONE_NUMBER=+526641234567

# =================================
# PRODUCTION ONLY
# =================================
# Uncomment and configure for production deployment
# TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
